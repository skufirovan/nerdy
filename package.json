{
  "name": "nerdy",
  "version": "1.0.0",
  "main": "src/main.ts",
  "scripts": {
    "dev": "./scripts/dev.sh",
    "dev:simple": "nodemon --watch src --ext ts --exec './node_modules/.bin/tsx src/main.ts'",
    "build": "./scripts/build.sh",
    "build:simple": "npm run build:clean && npm run build:compile && npm run build:aliases && npm run build:copy",
    "build:clean": "rm -rf dist",
    "build:compile": "tsc",
    "build:aliases": "tsc-alias",
    "build:copy": "cp -r src/prisma/generated dist/prisma/generated 2>/dev/null || true",
    "start": "node dist/main.js",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "prisma:mig": "npx prisma migrate dev --schema src/prisma/schema.prisma",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "description": "Telegram game bot",
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "axios": "^1.10.0",
    "dotenv": "^16.5.0",
    "telegraf": "^4.16.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.2",
    "@types/node": "^24.0.1",
    "jest": "^30.0.2",
    "nodemon": "^3.1.10",
    "prisma": "^6.9.0",
    "ts-jest": "^29.4.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
